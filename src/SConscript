Import('env')
Import('version')


version_tex = env.Substfile(
    'version.tex.in',
    SUBST_DICT={'@VERSION@' : version})


env['zgtc'] += Glob('*.tex')
env['zgtc'] += version_tex


SConscript([
    'hello-world.d/SConscript',
    'preface.d/SConscript',
])


zgtc = env.PDF('zoomer-guide-to-c.tex')
env.Depends(zgtc, env['zgtc'])

Export('zgtc')
